<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/cep-promise/dist/cep-promise.min.js"></script>
    <link rel="stylesheet" href="./css/style.css">
</head>
<body>
    <form action="/addImovel" method="post">
        <div>
            <input type="text" name="descricao" placeholder="Descricao">
        </div>
        <div>
            <input type="text" name="telefone" placeholder="Telefone">
        </div>
        <div>
            <input type="text" name="valor" placeholder="Valor">
        </div>
        <div>
            <input type="text" name="cep" id="cep" placeholder="CEP">
        </div>
        <div>
            <input type="text" name="estado" placeholder="Estado">
        </div>
        <div>
            <input type="text" name="cidade" placeholder="Cidade">
        </div>
        <div>
            <input type="text" name="bairro" placeholder="Bairro">
        </div>
        <div>
            <input type="text" name="rua" placeholder="Rua">
        </div>
        <div>
            <input type="text" name="numero" placeholder="Numero">
        </div>
        <div>
            <input type="file" name="arquivo">
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Adicionar imóvel</button>
        </div>
      </form>
</body>
<script>
    document.getElementById('cep').addEventListener('blur', function () {
        const cep = this.value;
    
        // Faça uma requisição AJAX para buscar o endereço com base no CEP
        fetch(`https://viacep.com.br/ws/${cep}/json/`)
          .then((response) => response.json())
          .then((data) => {
            // Preencha os campos de endereço com os dados retornados
            document.querySelector('input[name="estado"]').value = data.uf;
            document.querySelector('input[name="cidade"]').value = data.localidade;
            document.querySelector('input[name="bairro"]').value = data.bairro;
            document.querySelector('input[name="rua"]').value = data.logradouro;
            // Você pode adicionar mais campos conforme necessário
          })
          .catch((error) => {
            console.error('Erro ao buscar o endereço:', error);
          });
      });
</script>
</html>