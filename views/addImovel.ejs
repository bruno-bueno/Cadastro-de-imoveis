<body>
    <h2 class="mt-2">Adicionar Imovel</h2>
    <form action="/addImovel" method="POST" enctype="multipart/form-data">
        <div class="mt-3">
            <input type="text" class="form-control" name="descricao" placeholder="Descricao">
        </div>
        <div class="mt-3">
            <input type="text" class="form-control" name="telefone" placeholder="Telefone">
        </div>
        <div class="mt-3">
            <input type="text" class="form-control" name="valor" placeholder="Valor">
        </div>
        <div class="mt-3">
            <input type="text" class="form-control" name="cep" id="cep" placeholder="CEP">
        </div>
        <div class="mt-3">
            <input type="text" class="form-control" name="estado" placeholder="Estado">
        </div>
        <div class="mt-3">
            <input type="text" class="form-control" name="cidade" placeholder="Cidade">
        </div>
        <div class="mt-3">
            <input type="text" class="form-control" name="bairro" placeholder="Bairro">
        </div>
        <div class="mt-3">
            <input type="text" class="form-control" name="rua" placeholder="Rua">
        </div>
        <div class="mt-3">
            <input type="text" class="form-control" name="numero" placeholder="Numero">
        </div>
        <div class="mt-3">
            <input type="file" class="form-control" name="arquivo" multiple>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-dark">Adicionar imóvel</button>
        </div>
      </form>
</body>
<script>
    document.querySelector('#cep').addEventListener('blur', function () {
        const cep = this.value;
    
        fetch(`https://viacep.com.br/ws/${cep}/json/`)
          .then((response) => response.json())
          .then((data) => {
            document.querySelector('input[name="estado"]').value = data.uf;
            document.querySelector('input[name="cidade"]').value = data.localidade;
            document.querySelector('input[name="bairro"]').value = data.bairro;
            document.querySelector('input[name="rua"]').value = data.logradouro;
          })
          .catch((error) => {
            console.error('Erro ao buscar o endereço:', error);
          });
      });
</script>